{
  "include": ["lib/**/*.js", "test/**/*.js", "*.js"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  }
}
